.library-screen__header {
    width: 100%;
    padding-left: 15px;
    padding-right: 60px;
    padding-top: 0;
    padding-bottom: 0;
    justify-content: space-between;
}

.library-screen__header__name {
    width: 60%;
}

.library-screen__header__size {
    width: 40%;
}

.library-screen__scroll-view {
    width: 100%;
    border-top-left-radius: 11px;
    border-bottom-left-radius: 11px;
    border-top-right-radius: 11px;
    border-bottom-right-radius: 11px;
}
