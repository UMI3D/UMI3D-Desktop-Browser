.top__area {
	align-items: flex-start;
	left: 0;
	right: 0;
}

.top__area .top__area-main {
	flex-direction: row;
	width: 100%;
	min-height: 90px;
}

.top__area .top__area-main > .top__area-button {
	position: absolute;
}

.top__area .top__area-main > .top__area-button > .button-body > .button-content__container {
	background-image: var(--background-image-pause);
}